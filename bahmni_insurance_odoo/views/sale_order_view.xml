<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_inherit_form_view" model="ir.ui.view">
        <field name="name">Sale Order Inherit Form View</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="check_eligibility" type="object" string="Apply Copayment" class="oe_highlight" attrs="{'invisible': ['|', ('payment_type', '!=', 'insurance'), ('state', '!=', 'draft')]}"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="nhis_number"/>
                <field name="insurance_status"/>
                <field name="payment_type"/>
                <field name="external_visit_uuid"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="claim_id"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="payment_type"/>
                <field name="insurance_remain_qty" attrs="{'invisible':[('payment_type', '=', 'cash')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
           <xpath expr="//group[@name='note_group']" position="replace">
                <group name="note_group" col="6">
                    <group name="discount" colspan="2">   
                    </group>
                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                        <field name="amount_untaxed" widget='monetary'
                            options="{'currency_field': 'currency_id'}"/>
                        <field name="amount_tax" widget='monetary'
                            options="{'currency_field': 'currency_id'}"/>
                        <field name="discount_type" required="1" attrs="{'invisible': ['|', ('amount_untaxed', '=', 0.00), ('payment_type', '=', 'insurance')], 'readonly': [('state', 'not in', ['draft', 'sent'])]}"/>
                        
                        <field name="discount_percentage" widget='monetary' force_save = "1"                                    
                            attrs="{'readonly': ['|',('state', 'not in', ['draft', 'sent']),('discount_type', '=', 'fixed')],'invisible': ['|', ('discount_type', 'in', ('fixed','none')), ('payment_type', '=', 'insurance')]}"/>
                                
                        <field name="discount" widget='monetary' force_save = "1" 
                            options="{'currency_field': 'currency_id'}"
                            attrs="{'readonly': ['|',('state', 'not in', ['draft', 'sent']),('discount_type', '=', 'percentage')],'invisible': ['|', ('discount_type', 'in', ('none')), ('payment_type', '=', 'insurance')]}"/>
                        
                        <field name="disc_acc_id"  force_save = "1"                                  
                            attrs="{'required': [('discount', '!=', 0.0)],'invisible': ['|', ('discount_type', '=', 'none'), ('payment_type', '=', 'insurance')],'readonly': [('state', 'not in', ['draft', 'sent'])]}"/>
                        
                        <!--Copayment-->
                        <field name="discount_type" string="Copayment Type" required="1" attrs="{'invisible': ['|', ('amount_untaxed', '=', 0.00), ('payment_type', '=', 'cash')], 'readonly': [('state', 'not in', ['draft', 'sent'])]}"/>
                        
                        <field name="discount_percentage" string="Copayment Percentage" widget='monetary' force_save = "1"                                    
                            attrs="{'readonly': ['|',('state', 'not in', ['draft', 'sent']),('discount_type', '=', 'fixed')],'invisible': ['|', ('discount_type', 'in', ('fixed','none')), ('payment_type', '=', 'cash')]}"/>
                                
                        <field name="discount" string="Copayment" widget='monetary' force_save = "1" 
                            options="{'currency_field': 'currency_id'}"
                            attrs="{'readonly': ['|',('state', 'not in', ['draft', 'sent']),('discount_type', '=', 'percentage')],'invisible': ['|', ('discount_type', 'in', ('none')), ('payment_type', '=', 'cash')]}"/>
                        
                        <field name="disc_acc_id" string="Copayment Account Head" force_save = "1"                                  
                            attrs="{'required': [('discount', '!=', 0.0)],'invisible': ['|', ('discount_type', '=', 'none'), ('payment_type', '=', 'cash')],'readonly': [('state', 'not in', ['draft', 'sent'])]}"/>

                        <field name="round_off_amount" widget='monetary' force_save = "1"  readonly="1"
                            options="{'currency_field': 'currency_id'}"/>
                                                      
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="amount_total"/>
                            <button name="button_dummy"
                                states="draft,sent" string="(update)"
                                type="object"
                                class="oe_edit_only oe_link"/>
                        </div>
                        <field name="amount_total" nolabel="1"
                            class="oe_subtotal_footer_separator"
                            widget='monetary'
                            options="{'currency_field': 'currency_id'}"/>
                                   
                        <field name="prev_outstanding_balance" widget='monetary' readonly="1" force_save = "1" 
                            options="{'currency_field': 'currency_id'}"/>
                                   
                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                            <label for="total_outstanding_balance"/>
                        </div>

                        <field name="total_outstanding_balance" nolabel="1" readonly="1" force_save = "1"
                            class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <group colspan="4">
                        <field colspan="2" name="note" nolabel="1" placeholder="Terms and conditions..."/>
                    </group>
                    <div class="clearfix"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>